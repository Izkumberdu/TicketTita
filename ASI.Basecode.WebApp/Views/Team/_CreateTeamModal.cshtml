@model ASI.Basecode.Services.ServiceModels.TeamViewModel

@{
    var CategoryTypes = ViewBag.CTs;
}

<div class="modal fade" id="createTeamModal" tabindex="-1" role="dialog" aria-labelledby="createTeamModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createTeamModalLabel">Create Team</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="createTeamForm">
                    <input type="hidden" id="createTeamId" name="TeamId" value="@Model.TeamId" />
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" id="createTeamName" name="Name" maxlength="100" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                        <span id="remainingNameChars" class="text-muted small">100 characters remaining</span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control" id="createTeamDescription" name="Description" maxlength="800"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                        <span id="remainingDescriptionChars" class="text-muted small">800 characters remaining</span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SpecializationId" class="control-label"></label>
                        <select asp-for="SpecializationId" class="form-control">
                            @foreach (var item in CategoryTypes)
                            {
                                <option value="@item.CategoryTypeId">@item.CategoryName</option>
                            }
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="submitCreateTeam()">Create</button>
            </div>
        </div>
    </div>
</div>
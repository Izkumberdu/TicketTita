@model IEnumerable<ASI.Basecode.Services.ServiceModels.NotificationViewModel>

@{
    ViewData["Title"] = "Notifications";
}

<h1>Notifications</h1>

<form method="post" asp-action="MarkAllAsRead">
    <button type="submit" class="btn btn-primary">Mark All as Read</button>
</form>

<form method="post" asp-action="MarkAllAsUnread">
    <button type="submit" class="btn btn-warning">Mark All as Unread</button>
</form>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NotificationId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NotificationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NotificationTypeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TicketId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsRead)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NotificationId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NotificationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NotificationTypeId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TicketId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsRead)
                </td>
                <td>
                    <form method="post" asp-action="MarkAsUnread" style="display:inline">
                        <input type="hidden" name="id" value="@item.NotificationId" />
                        <button type="submit" class="btn btn-link">Mark as Unread</button>
                    </form>
                    <form method="post" asp-action="MarkAsRead" style="display:inline">
                        <input type="hidden" name="id" value="@item.NotificationId" />
                        <button type="submit" class="btn btn-link">Mark as Read</button>
                    </form>
                    @Html.ActionLink("Details", "ViewTicket", "Ticket", new { id = item.TicketId, notificationId = item.NotificationId }, null) |
                    <a href="#" class="btn btn-link text-danger" onclick="displayDeleteModal('@item.NotificationId')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="fa fa-exclamation-triangle px-1" style="color: var(--danger-color);"></i>
                    Confirm Delete
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body pl-4 py-1">
                <p>Are you sure you want to delete this notification? This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var notificationId;
        function displayDeleteModal(id) {
            notificationId = id;
            $('#deleteModal').modal('show');
        }

        $('#confirmDeleteBtn').on('click', function () {
            $.ajax({
                url: '@Url.Action("Delete", "Notification")',
                type: 'POST',
                data: { id: notificationId },
                success: function (result) {
                    sessionStorage.setItem("DeleteSuccess", "Deleted Successfully");
                    window.location.href = '@Url.Action("Index", "Notification")';
                },
                error: function (xhr, status, error) {
                }
            });
        });

        var deleteMessage = sessionStorage.getItem("DeleteSuccess");
    </script>
}

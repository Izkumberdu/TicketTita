@model ASI.Basecode.Services.ServiceModels.FeedbackViewModel

@{
    ViewData["Title"] = "ViewFeedback";
}

<h1>View Feedback</h1>

<div>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <h4>Ticket Details</h4>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="UserId" type="hidden" />
            <input asp-for="TicketId" type="hidden" />
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="TicketId" class="control-label"></label>
                        <input value="@Model.TicketId" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="Ticket.PriorityType" class="control-label"></label>
                        <input value="@Model.Ticket.PriorityType.PriorityName" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="Ticket.CategoryType" class="control-label"></label>
                        <input value="@Model.Ticket.CategoryType.CategoryName" class="form-control" readonly />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Ticket.Agent" class="control-label"></label>
                        <input value="@Model.Ticket.Agent.Name" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="Ticket.CreatedDate" class="control-label"></label>
                        <input value="@Model.Ticket.CreatedDate" class="form-control" readonly />
                    </div>
                    <div class="form-group">
                        <label asp-for="Ticket.ResolvedDate" class="control-label"></label>
                        <input value="@Model.Ticket.ResolvedDate" class="form-control" readonly />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Ticket.Subject" class="control-label"></label>
                <input value="@Model.Ticket.Subject" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Ticket.IssueDescription" class="control-label"></label>
                <textarea class="form-control" readonly>@Model.Ticket.IssueDescription</textarea>
            </div>
            <hr />
            <h4>Feedback Details</h4>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="User" class="control-label"></label>
                        <input value="@Model.Ticket.User.Name" class="form-control" readonly />
                    </div>
                </div>
                <div class="col-md-6">
                    
                    <div class="form-group">
                        <label asp-for="CreatedDate" class="control-label"></label>
                        <input value="@Model.CreatedDate" class="form-control" readonly />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="FeedbackRating" class="control-label"></label>
                <div class="star-rating">
                    @{
                        for (int i = 5; i >= 1; i--)
                        {
                            <input type="radio" id="star-@i" name="FeedbackRating"
                                   value="@i" @(Model.FeedbackRating == i ? "checked" : (Model.FeedbackRating == 0 && i == 1 ? "checked" : "")) disabled />
                            <label for="star-@i" title="@i stars"></label>
                        }
                    }
                </div>
            </div>
            <div class="form-group">
                <label asp-for="FeedbackContent" class="control-label"></label>
                <textarea class="form-control" readonly>@Model.FeedbackContent</textarea>
            </div>
        </div>
    </div>
</div>
<div>
    <a asp-action="ViewAll">Back to List</a>
</div>

<style>
    .star-rating {
        direction: rtl;
    }

    .star-rating input[type="radio"] {
        display: none;
     }

    .star-rating label {
        font-size: 2rem;
        color: #ddd;
        cursor: default;
        pointer-events: none;
    }

    .star-rating label:before {
        content: '★';
    }

    .star-rating input[type="radio"]:checked ~ label {
        color: #f5c518;
    }
</style>
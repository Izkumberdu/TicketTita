@model ASI.Basecode.Services.ServiceModels.TicketViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Ticket</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ticket_ID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ticket_ID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.subject)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.subject)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.issueDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.issueDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.categoryType_ID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.categoryName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.priorityType_ID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Priority.priorityName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.statusType_ID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status.statusName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.createdDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.createdDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.updatedDate)
        </dt>
        <dd class="col-sm-10">
            @if (Model.updatedDate == DateTime.MinValue)
            {
                @:No Updates
            }
            else
            {
                @Html.DisplayFor(model => model.updatedDate)
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.resolvedDate)
        </dt>
        <dd class="col-sm-10">
            @if (Model.resolvedDate == DateTime.MinValue)
            {
                @:Open
            }
            else
            {
                @Html.DisplayFor(model => model.resolvedDate)
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input asp-for="ticket_ID" type="hidden" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="ViewAll">Back to List</a>
    </form>
</div>

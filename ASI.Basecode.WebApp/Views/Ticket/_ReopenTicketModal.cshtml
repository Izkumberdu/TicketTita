@model ASI.Basecode.Services.ServiceModels.TicketViewModel

<div class="modal fade" id="reopenTicketModal" tabindex="-1" role="dialog" aria-labelledby="reopenTicketModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title font-weight-bold" id="reopenTicketModalLabel">REOPEN TICKET#@Model.TicketId</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to reopen this ticket?</p>
            </div>
            <div class="modal-footer">
                <input type="hidden" id="ticketId" value="@Model.TicketId" />
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="reopenTicket()">Confirm</button>
            </div>
        </div>
    </div>
</div>
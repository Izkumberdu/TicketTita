@model ASI.Basecode.Services.ServiceModels.TicketViewModel

<div class="modal fade" id="updateTrackingModal" tabindex="-1" role="dialog" aria-labelledby="updateTrackingModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title font-weight-bold" id="updateTrackingModalLabel">UPDATE TRACKING</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="updateTrackingForm">
                    @if(!User.IsInRole("Employee")){
                        <div class="form-group">
                            <label for="priorityId">Priority</label>
                            <select asp-for="PriorityTypeId" id="priorityId" class="form-control">
                                @foreach (var priority in Model.PriorityTypes)
                                {
                                    <option value="@priority.PriorityTypeId">@priority.PriorityName</option>
                                }
                            </select>
                        </div>
                    }
                    <div class="form-group">
                        <label for="statusId">Status</label>
                        <select asp-for="StatusTypeId" id="statusId" class="form-control">
                            @foreach (var status in Model.StatusTypes)
                            {
                                <option value="@status.StatusTypeId">@status.StatusName</option>
                            }
                        </select>
                    </div>
                    <input type="hidden" id="ticketId" value="@Model.TicketId" />
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="validateTracking()">Save changes</button>
            </div>
        </div>
    </div>
</div>
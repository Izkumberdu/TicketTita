@model ASI.Basecode.Services.ServiceModels.UserPreferencesViewModel

<h5>Ticket Notifications</h5>
<div class="row">
    <div class="col-md-3 form-group">
        <div class="form-group">
            <label for="notifyCreation">Creation</label>
            <select class="form-control" id="notifyCreation" name="Preferences[notifyCreation]">
                <option value="notify_creation_yes" selected="@(string.IsNullOrEmpty(Model.Preferences.GetValueOrDefault("notifyCreation")) || 
                        Model.Preferences.GetValueOrDefault("notifyCreation") == "notify_creation_yes")">Yes</option>
                <option value="notify_creation_no" selected="@(Model.Preferences.GetValueOrDefault("notifyCreation") == "notify_creation_no")">No</option>
            </select>
        </div>
        <div class="form-group">
            <label for="notifyDetailsUpdate">Details Update</label>
            <select class="form-control" id="notifyDetailsUpdate" name="Preferences[notifyDetailsUpdate]">

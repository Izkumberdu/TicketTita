                <select class="form-control" id="notifyAgentTeamChange" name="Preferences[notifyAgentTeamChange]">
                    <option value="yes" selected="@(string.IsNullOrEmpty(Model.Preferences.GetValueOrDefault("notifyAgentTeamChange")) ||
                        Model.Preferences.GetValueOrDefault("notifyAgentTeamChange") == "yes")">Notify</option>
                    <option value="no" selected="@(Model.Preferences.GetValueOrDefault("notifyAgentTeamChange") == "no")">Don't Notify</option>
                </select>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#createUserForm').submit(function (e) {
                e.preventDefault();

                $.ajax({
                    url: '@Url.Action("PostCreate")',
                    type: 'POST',
                    data: $(this).serialize(),
                    success: function (result) {
                        if (result.success) {

                            location.reload(); 
                        }
                    },
                    }
                });
            });

            var errMessage = '@TempData["DuplicateErr"]';
            if (errMessage) {
                toastr.error(errMessage);
            }
        });
    </script>

@model ASI.Basecode.Services.ServiceModels.UserViewModel

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}

<div class="modal-content">
    <button type="button" class="close m-3 ml-sm-auto" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <div class="modal-header d-flex justify-content-center">
        <h5 class="modal-title" id="createUserModalLabel">Add New User</h5>
    </div>
    <div class="modal-body ">
        <form id="createUserForm" asp-action="PostCreate" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="Name" class="col-sm-2 col-form-label text-sm-right"></label>
                <div class="col-sm-10">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Email" class="col-sm-2 col-form-label text-sm-right"></label>
                <div class="col-sm-10">
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Password" class="col-sm-2 col-form-label text-sm-right"></label>
                <div class="col-sm-10">
                    <input asp-for="Password" class="form-control" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="RoleId" class="col-sm-2 col-form-label text-sm-right"></label>
                <div class="col-sm-10">
                    <select asp-for="RoleId" class="form-control">
                        <option value="">Select Role</option>
                        @foreach (var role in Model.Roles)
                        {
                            <option value="@role.RoleId">@role.RoleName</option>
                        }
                    </select>
                    <span asp-validation-for="RoleId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group d-flex justify-content-center">
                <div class="col-sm-10 offset-sm-2">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>

</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('#createUserForm').submit(function (e) {
                e.preventDefault();

                $.ajax({
                    url: '@Url.Action("PostCreate")',
                    type: 'POST',
                    data: $(this).serialize(),
                    success: function (result) {
                        if (result.success) {

                            location.reload(); 
                        }
                    },
                    }
                });
            });

            var errMessage = '@TempData["DuplicateErr"]';
            if (errMessage) {
                toastr.error(errMessage);
            }
        });
    </script>
}

@model ASI.Basecode.Services.ServiceModels.UserViewModel

@{
    ViewData["Title"] = "Update";
    bool isSuper = User.HasClaim("IsSuperAdmin", "true");
}

@section styles {
    <link rel="stylesheet" href="~/css/user.css" />
}

<div class="d-flex justify-content-end mx-4 mt-3 mb-2">
    <button type="button" class="btn-close custom-close-button" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<h5 class="modal-title font-weight-bold d-flex justify-content-center mb-3" id="editUserModalLabel">Edit User</h5>

<div class="modal-body mx-5">
    <form id="updateUserForm" asp-action="PostUpdate" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="UserId" type="hidden" />
        <input asp-for="CreatedBy" type="hidden" />
        <input asp-for="CreatedTime" type="hidden" />
        <input asp-for="UpdatedBy" type="hidden" />
        <input asp-for="UpdatedTime" type="hidden" />

        <div class="form-row">
            <div class="form-group col-md-2">
                <label asp-for="Name" class="control-label"></label>
            </div>
            <div class="form-group col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-2">
                <label asp-for="Email" class="control-label"></label>
            </div>
            <div class="form-group col-md-10">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-2">
                <label asp-for="Password" class="control-label"></label>
            </div>
            <div class="form-group col-md-10">
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-2">
                <label asp-for="RoleId" class="control-label">Role</label>
            </div>
            <div class="form-group col-md-10">
                <select asp-for="RoleId" class="form-control">
                    <option value="">Select Role</option>
                    @foreach (var role in Model.Roles)
                    {
                        @if (role.RoleId != "Admin" || isSuper)
                        {
                            <option value="@role.RoleId">@role.RoleName</option>
                        }
                    }
                </select>
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group d-flex justify-content-center my-3">
            <input type="submit" value="Save" class="btn btn-white btn-radius" />
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            $('#updateUserForm').submit(function (e) {
                e.preventDefault();

                $.ajax({
                    url: '@Url.Action("PostUpdate")',
                    type: 'POST',
                    data: $(this).serialize(),
                    success: function (result) {
                        if (result.success) {
                            toastr.success(result.message);
                            location.reload();
                        } else {
                            toastr.error(result.message);
                        }
                    },
                    error: function () {
                        toastr.error('An error occurred while updating the user.');
                    }
                });
            });
        });
    </script>
}

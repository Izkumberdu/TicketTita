    </div>
</div>

<!-- Include Chart.js library -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const ctx = document.getElementById('bar-chart-custom-tooltip').getContext('2d');
        const dataBarCustomTooltip = {
            labels: ['January', 'February', 'March', 'April', 'May', 'June', 'July'],
            datasets: [
                {
                    label: 'Traffic',
                    data: [30, 15, 62, 65, 61, 65, 40],
                    backgroundColor: '#052542',
                    borderColor: '#052542',
                    borderWidth: 1
                }
            ]
        };

        const optionsBarCustomTooltip = {
            plugins: {
                tooltip: {
                    callbacks: {
                        label: function (context) {
                            let label = context.dataset.label || '';
                            label = `${label}: ${context.raw} users`;
                            return label;
                        }
                    }
                }
            },
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        };

        new Chart(ctx, {
            type: 'bar',
            data: dataBarCustomTooltip,
            options: optionsBarCustomTooltip
        });
    });
</script>
